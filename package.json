    "test:watch": "jest --coverage=false --onlyChanged --watch",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js",
    "pretest": "npm run lint"
  },
  "standard": {
    "globals": [
      "describe",
